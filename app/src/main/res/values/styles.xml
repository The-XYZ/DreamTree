<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">


        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimary">#1976D2</item>
        <item name="colorPrimaryDark">#1565c0</item>
        <item name="windowActionBar">false</item>


        <item name="colorAccent">#009688</item>

    </style>

    <style name="AppThemeNoToolbar" parent="@style/Theme.AppCompat.Light.DarkActionBar">

        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimary">#1976D2</item>

        <item name="colorPrimaryDark">#1565c0</item>
        <item name="colorAccent">#009688</item>

    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="CardTitle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>

    <item name="android:textColor">#FF9800</item>
    <item name="android:textSize">28sp</item>
    <item name="android:fontFamily">sans-serif-Bold</item>


    <item name="android:gravity">bottom|left</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingBottom">8dp</item>

    <item name="android:onClick">showPhoto</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="AnimationPopup">
        <item name="@android:windowEnterAnimation">@anim/appear</item>
        <item name="@android:windowExitAnimation">@anim/disappear</item>
    </style>

</resources>
